<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CompuI</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <%- include("./partials/header") %>
    
    <main>     
      <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/img/other/banner1.jpg" class="d-block w-100" alt="banner">
            <div class="carousel-caption d-none d-md-block">
              <h5>First slide label</h5>
              <p>Some representative placeholder content for the first slide.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/img/other/banner2.jpg" class="d-block w-100" alt="banner">
            <div class="carousel-caption d-none d-md-block">
              <h5>Second slide label</h5>
              <p>Some representative placeholder content for the second slide.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/img/other/banner3.jpg" class="d-block w-100" alt="banner">
            <div class="carousel-caption d-none d-md-block">
              <h5>Third slide label</h5>
              <p>Some representative placeholder content for the third slide.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/img/other/banner4.jpg" class="d-block w-100" alt="banner">
            <div class="carousel-caption d-none d-md-block">
              <h5>Third slide label</h5>
              <p>Some representative placeholder content for the third slide.</p>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <!-- ///////////////////////////////main////////////////////////////////////////////// -->
      <section class="">
       
        <h2 class="m-3">NUEVOS PRODUCTOS</h2>
        <div class="py-5 d-flex flex-wrap flex-row justify-content-around">
          <% ultimosPoducts.forEach(prod=>{ %> 
           <div class="card m-2" style="width: 18rem;">
             <img src="/img/product/<%= prod.image%>" class="card-img-top" alt="...">
             <div class="card-body">
               <h5 class="card-title"><%= prod.name%></h5>
               <% if (prod.offer > 0) {%> 
                 <div class="card-text text-light-emphasis d-flex" >
                   <p class="me-1" style="text-decoration: line-through;"><%=prod.price%> </p> <span class="text-success">  <%=prod.offer%> %</span>
                 </div>
                 <p class="card-text"><%= prod.price - (prod.price  * prod.offer/100) %></p>
             <%}else{%>  
                 <p class="card-text"><%=prod.price%></p>
             <%}%>
               <a href="http://localhost:3030/product/detail/<%=prod.id%>" class="btn btn-primary text-info">ver</a>
             </div>
           </div>
           <% }) %>
         </div>

      </section>

      <section class="">
       
        <h2 class="m-3">DESTACADOS</h2>
        <div class="py-5 d-flex flex-wrap flex-row justify-content-around">
         <% destacados.forEach(prod=>{ %> 
          <div class="card m-2" style="width: 18rem;">
            <img src="/img/product/<%= prod.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= prod.name%></h5>
              <% if (prod.offer > 0) {%> 
                <div class="card-text text-light-emphasis d-flex" >
                  <p class="me-1" style="text-decoration: line-through;"><%=prod.price%> </p> <span class="text-success">  <%=prod.offer%> %</span>
                </div>
                <p class="card-text"><%= prod.price - (prod.price  * prod.offer/100) %></p>
            <%}else{%>  
                <p class="card-text"><%=prod.price%></p>
            <%}%>
              <a href="http://localhost:3030/product/detail/<%=prod.id%>" class="btn btn-primary text-info">ver</a>
            </div>
          </div>
          <% }) %>
        </div>

      </section>
      
      <section>
        <h2>CATEGORIAS</h2>
        <% if (locals.categorias){ %>
          <ul>
            <% locals.categorias.forEach(cat=>{ %>
              <li><a class="dropdown-item" href="http://localhost:3030/product/category/<%=cat.id%>"><%= cat.name %></a></li>
            <% }) %>
          </ul>
          <%}%>

      </section>

      <section class="">
       
        <h2 class="m-3">NUESTRAS MEJORES OFERTAS</h2>
        <div class="py-5 d-flex flex-wrap flex-row justify-content-around">
          <% ofertas.forEach(prod=>{ %> 
           <div class="card m-2" style="width: 18rem;">
             <img src="/img/product/<%= prod.image%>" class="card-img-top" alt="...">
             <div class="card-body">
               <h5 class="card-title"><%= prod.name%></h5>
               <% if (prod.offer > 0) {%> 
                 <div class="card-text text-light-emphasis d-flex" >
                   <p class="me-1" style="text-decoration: line-through;"><%=prod.price%> </p> <span class="text-success">  <%=prod.offer%> %</span>
                 </div>
                 <p class="card-text"><%= prod.price - (prod.price  * prod.offer/100) %></p>
             <%}else{%>  
                 <p class="card-text"><%=prod.price%></p>
             <%}%>
               <a href="http://localhost:3030/product/detail/<%=prod.id%>" class="btn btn-primary text-info">ver</a>
             </div>
           </div>
           <% }) %>
         </div>

      </section>
     
      </main>
      <%- include("./partials/footer") %>

   
</body>
</html>